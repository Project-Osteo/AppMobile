<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@color/colorPrimary"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        tools:context=".vistas.CalcularIMCActivity">


        <EditText
            android:id="@+id/etAltura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etPeso"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="0dp"
            android:ems="10"
            android:gravity="center"
            android:hint="Altura"
            android:inputType="numberDecimal"
            android:textColor="@color/colorTextSecondary"
            android:textColorHint="@color/colorSecondary" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/etPeso"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="@string/kilos"
            android:textColor="@color/colorTextSecondary"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/etPeso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="false"
            android:layout_marginLeft="60dp"
            android:ems="10"
            android:gravity="center"
            android:hint="Peso"
            android:inputType="numberDecimal"
            android:textColor="@color/colorTextSecondary"
            android:textColorHint="@color/colorSecondary" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etPeso"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/etAltura"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="@string/metros"
            android:textColor="@color/colorTextSecondary"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btCalcIMC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etAltura"
            android:backgroundTint="@color/colorSecondary"
            android:background="@drawable/round_buttons_menu_inicial"
            android:text="@string/calcular"
            android:textColor="@color/colorTextSecondary" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="126dp"
            android:layout_height="43dp"
            android:layout_below="@+id/textView2"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@+id/btCalcIMC"
            android:layout_toRightOf="@id/btCalcIMC"
            android:text="Resultado:"
            android:textColor="@color/colorText"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="126dp"
            android:layout_height="43dp"
            android:layout_below="@+id/textView2"
            android:layout_marginStart="144dp"
            android:layout_marginLeft="144dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@+id/btCalcIMC"
            android:layout_toRightOf="@id/btCalcIMC"
            android:textColor="@color/colorText"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btCalcIMC"
            android:adjustViewBounds="true"
            android:paddingTop="20dp"
            android:src="@drawable/tabela_calc_imc" />

    </RelativeLayout>
