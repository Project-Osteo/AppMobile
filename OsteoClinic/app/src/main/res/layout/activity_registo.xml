<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".vistas.RegistoActivity"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:id="@+id/tvTituloRegistar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:text="@string/titulo_registar"
        android:textAlignment="center"
        android:textColor="@color/colorTextHint"
        android:textSize="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:hint="Nome"
            android:inputType="textPersonName"
            android:textColor="@color/colorTextEditText"
            android:textColorHint="@color/colorTextHint"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorTextEditText"
            android:textColorHint="@color/colorTextHint"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@color/colorTextEditText"
            android:textColorHint="@color/colorTextHint"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/etConfirmar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:hint="Confirmar Password"
            android:inputType="textPassword"
            android:textColor="@color/colorTextEditText"
            android:textColorHint="@color/colorTextHint"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/etTelemovel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:hint="TelemÃ³vel"
            android:inputType="textPersonName"
            android:textColor="@color/colorTextEditText"
            android:textColorHint="@color/colorTextHint"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/etGenero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:hint="Genero"
            android:inputType="textPersonName"
            android:textColor="@color/colorTextEditText"
            android:textColorHint="@color/colorTextHint"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/etNacionalidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:hint="Nacionalidade"
            android:inputType="textPersonName"
            android:textColor="@color/colorTextEditText"
            android:textColorHint="@color/colorTextHint"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/etLocalidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:hint="Localidade"
            android:inputType="textPersonName"
            android:textColor="@color/colorTextEditText"
            android:textColorHint="@color/colorTextHint"
            android:textSize="16dp" />

    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/colorTextHint"
        android:text="@string/bt_registo"
        android:textColor="@color/colorText" />

</LinearLayout>