<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="7dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/colorSecondary">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/card_image"
            android:src="@drawable/ic_workout"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/tvNumTreinoCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextSecondary"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_toEndOf="@id/card_image"
            android:layout_marginStart="20dp" />

        <TextView
            android:id="@+id/tvDataTreinoCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextSecondary"
            android:textSize="22sp"
            android:layout_toEndOf="@id/tvNumTreinoCard"
            android:layout_marginStart="30dp" />

        <TextView
            android:id="@+id/tvTipoTreinoCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvNumTreinoCard"
            android:layout_marginStart="20dp"
            android:layout_marginTop="13dp"
            android:layout_toEndOf="@id/card_image"
            android:textColor="@color/colorTextSecondary"
            android:textSize="18sp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>